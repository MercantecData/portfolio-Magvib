        <TextBlock HorizontalAlignment="Left" Margin="519,140,0,0" TextWrapping="Wrap" Text="Url:" VerticalAlignment="Top" Height="23"/>
        <TextBox x:Name="tAge" HorizontalAlignment="Left" Height="23" Margin="542,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="513,175,0,0" TextWrapping="Wrap" Text="Age:" VerticalAlignment="Top" Height="23"/>
        <Button x:Name="clear" Content="Clear" HorizontalAlignment="Left" Margin="596,344,0,0" VerticalAlignment="Top" Width="173" Height="46" Click="Button_Click"/>
        <Button x:Name="reset" Content="Reset" HorizontalAlignment="Left" Margin="197,344,0,0" VerticalAlignment="Top" Width="173" Height="46" Click="Button_Click"/>
        <Button x:Name="open_url" Content="Open Url" HorizontalAlignment="Left" Margin="418,293,0,0" VerticalAlignment="Top" Width="173" Height="46" Click="Button_Click"/>

    </Grid>
</Window>
